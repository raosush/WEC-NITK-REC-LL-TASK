<style>
  .gallery {
    display: grid;
    grid-auto-flow: dense;
    grid-template-columns: repeat(auto-fit, minmax(600px, 2fr));
    grid-auto-rows: 400px;
    grid-gap: 30px;
    padding: 20px;
  }
  .gallery .card {
    grid-area: span 1/span 1;
  }
  .gallery img {
    height: 100%;
    width: 100%;
    -o-object-fit: cover;
    object-fit: cover;
    border-radius: 15px;
    background-color: #000;
  }
</style>
<div class="gallery">
  <% (1..100).each do |x| %>
    <div class="card bg-dark text-white" style="box-shadow: 0 16px 20px 0 rgba(0,0,0,0.5); border-radius: 15px">
      <img class="card-image lazy" src="/loader.gif" data-src="https://source.unsplash.com/random/<%= x %>" alt="Card Image"/>
    </div>
  <% end %>
</div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/unveil/1.3.0/jquery.unveil.js" integrity="sha512-35BUpfEdDDaFFGEnh9e1nKjigs7LShj+x3iLnqUgOklzZiYsHcpgx4mao0i+gXebZmiG1lhQ8NpX7VZlRx7Sgg==" crossorigin="anonymous"></script>
<script>
  $(document).ready(function () {
      $("img").unveil();
  });
</script>