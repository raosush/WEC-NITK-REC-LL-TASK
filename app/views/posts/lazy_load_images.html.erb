<style>
  .gallery {
    display: grid;
    grid-auto-flow: dense;
    grid-template-columns: repeat(auto-fit, minmax(600px, 2fr));
    grid-auto-rows: 400px;
    grid-gap: 30px;
    padding: 20px;
  }
  .gallery .card {
    grid-area: span 1/span 1;
  }
  .gallery img {
    height: 100%;
    width: 100%;
    -o-object-fit: cover;
    object-fit: cover;
    border-radius: 15px;
    background-color: #000;
  }
</style>
<div class="gallery">
  <% (1..100).each do |x| %>
    <div class="card bg-dark text-white" style="box-shadow: 0 16px 20px 0 rgba(0,0,0,0.5); border-radius: 15px">
      <img class="card-image lazy" src="/assets/loading.gif" data-src="https://source.unsplash.com/random/<%= x %>" alt="Card Image"/>
    </div>
  <% end %>
</div>
<script>
    $(document).ready(function () {
        let lazyloadImages = document.querySelectorAll("img.lazy");
        let preloadHeight = 400;
        lazyLoadImages();
        function lazyLoadImages() {
            lazyloadImages.forEach(function(img) {
                if(img.offsetTop < (window.innerHeight + window.pageYOffset + preloadHeight)) {
                    img.src = img.dataset.src;
                    img.classList.remove('lazy');
                }
            });
            if (lazyloadImages.length === 0) {
                document.removeEventListener('scroll', lazyLoadImages);
            }
        }
        document.addEventListener('scroll', lazyLoadImages);
    });
</script>